{
  "title": "Airport",
  "description": "Airport schema",
  "id": "http://airschema.org/schema/airport#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "surface": {
      "title": "Type of surface.",
      "type": "string",
      "enum": [
        "concrete",
        "asphaltic-concrete",
        "asphalt"
      ]
    },
    "wait_time": {
      "title": "Waiting time",
      "description": "in minutes",
      "oneOf": [
        {
          "type": "string",
          "pattern": "^[<>]?\\d+$"
        },
        {
          "type": "number"
        }
      ]
    },
    "times": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "terminal": {
            "title": "Terminal",
            "type": "string"
          },
          "area": {
            "title": "Area",
            "type": "string"
          },
          "time": {
            "$ref": "#/definitions/wait_time"
          }
        }
      }
    },
    "coords": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "number"
      }
    },
    "features": {
      "type": "string",
      "enum": [
        "free-wifi",
        "payable-wifi",
        "open-nonstop",
        "sleep-forbidden"
      ]
    }
  },
  "properties": {
    "ident": {
      "title": "Airport ID",
      "type": "object",
      "description": "Airport identificators",
      "properties": {
        "iata": {
          "title": "IATA code",
          "description": "3-letter IATA code of airport.",
          "type": "string"
        },
        "icao": {
          "title": "ICAO code",
          "description": "3-letter ICAO code of airport.",
          "type": "string"
        },
        "geonames": {
          "title": "Geonames ID",
          "type": "number"
        }
      }
    },
    "name": {
      "title": "Name",
      "description": "Name of airport.",
      "type": "string"
    },
    "domain": {
      "title": "Internet domain",
      "description": "Internet domain of airport.",
      "type": "string"
    },
    "aliases": {
      "title": "Aliases",
      "description": "Name aliases of airport.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "title": "Language",
            "description": "Three-letter ISO 639-3 language code.",
            "type": "string"
          },
          "value": {
            "title": "Value",
            "type": "string"
          },
          "preferred": {
            "title": "Preferred",
            "type": "boolean"
          },
          "historical": {
            "title": "Historical",
            "description": "Historical names.",
            "type": "boolean"
          },
          "colloquial": {
            "title": "Colloquial",
            "type": "boolean"
          }
        }
      }
    },
    "continent": {
      "title": "Continent",
      "description": "Continent where is airport located.",
      "type": "string",
      "enum": [
        "AF",
        "AS",
        "EU",
        "NA",
        "SA",
        "OC",
        "AN"
      ]
    },
    "region": {
      "title": "Region",
      "description": "ISO 3166-2 region code",
      "type": "string",
      "pattern": "^[A-Z]{2}-[A-Z]{2}$"
    },
    "country": {
      "title": "Country",
      "description": "ISO 3166-1 alpha-3 code",
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "served": {
      "title": "Served",
      "description": "Cities/locations served by this airport.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "description": "Name of city/location.",
            "type": "string"
          },
          "geonames": {
            "title": "Geonames ID",
            "type": "number"
          }
        }
      }
    },
    "timezone": {
      "title": "Timezone",
      "description": "tz database code.",
      "type": "string"
    },
    "coords": {
      "title": "Coordinates",
      "description": "Airport location coordinates.",
      "$ref": "#/definitions/coords"
    },
    "elevation": {
      "title": "Elevation",
      "type": "number",
      "description": "Elevation of airport in feets."
    },
    "runways": {
      "title": "Runways",
      "description": "Info about airport runways.",
      "type": "array",
      "items": {
        "title": "Runway",
        "type": "object",
        "properties": {
          "direction": {
            "title": "Direction",
            "description": "Runway direction.",
            "type": "string",
            "pattern": "^\\d{2}\\/\\d{2}$"
          },
          "length": {
            "title": "Length",
            "description": "Runway length in feets.",
            "type": "number"
          },
          "size": {
            "title": "Size",
            "description": "Runway dimensions in feets (length x width).",
            "type": "string",
            "pattern": "^\\d+x\\d+$"
          },
          "surface": {
            "title": "Surface",
            "description": "Type of surface.",
            "$ref": "#/definitions/surface"
          },
          "active": {
            "title": "Active?",
            "type": "boolean"
          }
        }
      }
    },
    "helipads": {
      "title": "Helipads",
      "description": "Info about airport helipads.",
      "type": "array",
      "items": {
        "title": "Helipad",
        "type": "object",
        "properties": {
          "number": {
            "title": "Number",
            "type": "string"
          },
          "length": {
            "title": "Length",
            "description": "ft",
            "type": "number"
          },
          "surface": {
            "title": "Surface",
            "description": "Type of surface.",
            "$ref": "#/definitions/surface"
          }
        }
      }
    },
    "terminals": {
      "title": "Terminals",
      "description": "Airport terminals.",
      "type": "array",
      "items": {
        "title": "Terminal",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "description": "Terminal name.",
            "type": "string"
          },
          "alias": {
            "title": "Alias",
            "description": "Terminal alias or shortname.",
            "type": "string"
          },
          "public": {
            "title": "Public",
            "description": "Its public terminal?",
            "type": "boolean"
          },
          "coords": {
            "title": "Coordinates",
            "description": "Location coordinates of terminal.",
            "$ref": "#/definitions/coords"
          },
          "features": {
            "title": "Features",
            "description": "Terminal features.",
            "$ref": "#/definitions/features"
          }
        }
      }
    },
    "website": {
      "title": "Website",
      "description": "Airport website.",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "url": {
              "title": "URL",
              "type": "string"
            },
            "url_mobile": {
              "title": "Mobile URL",
              "description": "URL to mobile version of web.",
              "type": "string"
            },
            "mobile_ready": {
              "title": "Mobile ready?",
              "type": "boolean"
            },
            "languages": {
              "title": "Languages",
              "description": "Website languages.",
              "type": "array",
              "items": {
                "title": "Language",
                "type": "object",
                "properties": {
                  "lang": {
                    "type": "string",
                    "pattern": "^[a-z]{2}(\\-[a-z]{2})?$"
                  },
                  "url": {
                    "type": "string"
                  },
                  "url_mobile": {
                    "type": "string"
                  },
                  "primary": {
                    "type": "boolean"
                  }
                }
              }
            },
            "features": {
              "title": "Features",
              "description": "Website features.",
              "type": "array",
              "items": {
                "title": "Feature",
                "type": "string",
                "enum": [
                  "sms-info",
                  "webcam",
                  "waiting-times",
                  "map"
                ]
              }
            }
          }
        }
      ]
    },
    "refs": {
      "title": "References",
      "type": "array",
      "items": {
        "title": "Reference",
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "description": "Type of reference.",
            "type": "string"
          },
          "value": {
            "title": "Value",
            "type": "string"
          }
        }
      }
    },
    "waiting_times": {
      "title": "Waiting times",
      "type": "object",
      "properties": {
        "security": {
          "title": "Security",
          "$ref": "#/definitions/times"
        }
      }
    },
    "webcams": {
      "title": "Webcams",
      "description": "Webcams at airport.",
      "type": "array",
      "items": {
        "title": "Webcam",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "description": "Name of webcam"
          },
          "terminal": {
            "title": "Terminal",
            "type": "string",
            "description": "Terminal name or alias."
          },
          "fps": {
            "title": "FPS",
            "description": "Frames per second.",
            "type": "number"
          },
          "resolution": {
            "title": "Resolution",
            "description": "Resolution in pixels.",
            "type": "string",
            "pattern": "^(\\d+)x(\\d+)$"
          },
          "url": {
            "title": "URL",
            "type": "string"
          },
          "raw_url": {
            "title": "Raw URL",
            "type": "string"
          }
        }
      }
    },
    "apps": {
      "title": "Applications",
      "type": "array",
      "items": {
        "title": "Application",
        "type": "object",
        "properties": {
          "platform": {
            "title": "Platform",
            "description": "Platform of application.",
            "type": "string",
            "enum": [
              "ios",
              "android",
              "wp",
              "firefox",
              "blackberry",
              "linux",
              "osx",
              "windows"
            ]
          },
          "id": {
            "title": "ID",
            "description": "Application ID.",
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              }
            ]
          },
          "url": {
            "title": "URL",
            "description": "Link to application.",
            "type": "string"
          }
        }
      }
    },
    "features": {
      "title": "Features",
      "description": "Airport features.",
      "type": "array",
      "items": {
        "title": "Feature",
        "$ref": "#/definitions/features"
      }
    },
    "opening_hours": {
      "title": "Opening hours",
      "type": "array",
      "items": {
        "title": "Opening time",
        "type": "object",
        "properties": {
          "days": {
            "title": "Days",
            "description": "Days in week.",
            "type": "string",
            "pattern": "^(mo|tu|we|th|fr|sa|su|all)(-(mo|tu|we|th|fr|sa|su))?$"
          },
          "times": {
            "title": "Times",
            "description": "Opening time.",
            "type": "string",
            "pattern": "^\\d{2}:\\d{2}\\-\\d{2}:\\d{2}$"
          }
        }
      }
    }
  }
}